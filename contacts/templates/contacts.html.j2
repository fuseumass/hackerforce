{% extends 'global/base.html.j2' %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Contacts</h3>
        <div class="col text-right">
            <a class="button" href="{{ url('contacts:new') }}">
                <button type="submit" class="btn btn-primary ml-auto">New Contact</button>
            </a>
        </div>
        <div class="col-lg-6 ml-auto">
            <div class="row gutters-xs">

                <div class="col">
                    <input class="form-control" placeholder="Filter by..." type="text">
                </div>
                <span class="col-auto">
                    <button class="btn btn-secondary" type="button"><i class="fe fe-search"></i></button>
                </span>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table card-table table-vcenter text-nowrap">
            <thead>
                <tr>
                    <th class="w-1">Checked</th>
                    <th>Name</th>
                    <th>Company</th>
                    <th>Position</th>
                    <th>Phone #</th>
                    <th>Email</th>
                    <th>Contacted</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for contact in contacts %}
                <tr>
                    <td>
                        <div>
                            <label class="custom-control custom-checkbox custom-control-inline">
                                <input class="custom-control-input" name="example-inline-checkbox1" value="option1"
                                    checked="" type="checkbox">
                                <span class="custom-control-label"></span>
                            </label>
                        </div>
                    </td>
                    <td><a href="invoice.html.j2" class="text-inherit">{{ contact.name() }}</a></td>
                    <td><a href="invoice.html.j2" class="text-inherit">{{ contact.company }}</a></td>
                    <td><a href="invoice.html.j2" class="text-inherit">{{ contact.position }}</a></td>
                    <td><a href="invoice.html.j2" class="text-inherit">{{ contact.phone_number }}</a></td>
                    <td><a href="invoice.html.j2" class="text-inherit">{{ contact.email }}</a></td>
                    <td>
                        {% if contact.is_warm_contact %}
                        Yes
                        {% else %}
                        No
                        {% endif %}
                    </td>
                    <td class="text-right">
                        <div class="item-action dropdown">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">Actions</button>
                            <a href="javascript:void(0)" data-toggle="dropdown" class="icon"><i class="fe fe-more-vertical"></i></a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fe fe-calendar"></i>
                                    Schedule </a>
                                <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fe fe-paperclip"></i>
                                    Attach File </a>
                                <div class="dropdown-divider"></div>
                                <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fe fe-trash-2"></i>
                                    Delete </a>
                            </div>
                        </div>
                    </td>
                    <td>
                        <a class="icon" href="{{ url('contacts:edit', pk=contact.pk) }}">
                            <i class="fe fe-edit"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
