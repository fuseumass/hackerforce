{% extends 'global/base.html.j2' %}

{% block css %}
{# import css here if you want it otherwise delete this block #}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <h3 class="page-title mb-5">Compose Email</h3>
        <div>
            <div class="list-group list-group-transparent mb-0">

                <a href="sent" class="list-group-item list-group-item-action d-flex align-items-center">
                    <span class="icon mr-3"><i class="fe fe-send"></i></span>Sent Mail
                </a>

                <a href="outbox" class="list-group-item list-group-item-action d-flex align-items-center">
                    <span class="icon mr-3"><i class="fe fe-truck"></i></span>Outbox
                </a>

                <a href="drafts" class="list-group-item list-group-item-action d-flex align-items-center">
                    <span class="icon mr-3"><i class="fe fe-file"></i></span>Drafts
                </a>

            </div>

            <div class="mt-6">
                <a href="#" class="btn btn-secondary btn-block">Compose new Email</a>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Compose New Message Template</h3>
            </div>
            <div class="card-body">
                <form action="" method="post" class="email-form">
                    <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
                    {# <div class="form-group">
                        <div class="row align-items-center">
                            {{ form.as_p() }}
                        </div>
                    </div> #}
                    <div class="form-group">
                        <div class="row align-items-center">
                            <label class="col-sm-2">{{ form.subject.label }}</label>
                            <div class="col-sm-10">
                                {{ form.subject }}
                                {# <input type="text" form.id='subject' class="form-control"> #}
                            </div>
                        </div>
                    </div>
                    {{ form.message_text }}
                    <div class="form-group">
                        <div class="row align-items-center">
                            <label class="col-sm-2">{{ form.time_scheduled.label }}</label>
                            {{ form.time_scheduled }}
                        </div>
                    </div>
                    {# <textarea rows="10" form.id='messageBody' class="form-control"></textarea> #}
                    <div class="btn-list mt-4 text-right">
                        <button type="button" class="btn btn-primary btn-space">Send Message</button>
                        <button type="button" class="btn btn-primary btn-space" onclick="displayScheduler();">Schedule
                            Message</button>
                        <button type="submit" class="btn btn-primary btn-space">Save As Draft</button>
                    </div>

                    <div id="scheduler" style="display: none">
                        <label class="form-label">Date & Hour</label>
                        <input type="datetime-local" name="field-name" class="form-control" data-mask="00/00/0000 00:00:00"
                            data-mask-clearifnotmatch="true" placeholder="00/00/0000 00:00:00" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block js %}
<script src="{{ static("js/email.js") }}"></script>
{% endblock %}